<div class="container">
	<div class="row content-row my-4">

		<div id="plantsDiv" class="col-6">
			<table class="table table-striped table-bordered table-hover pretty-table" id="plantTable">
				<caption class="text-light panel-header text-center">
					<h3>Your Plants</h3>
				</caption>
				<tbody class="your-plants-table">
					<div class="userinfo" data-id="{{dataUser.id}}"></div>
					{{#each myPlants}}
					<tr class="plantRow">
						<td data-th=""><a href="/plants/{{this.id}}"><img src="{{this.image_path}}" width="100" height="100" class="thumb"></a>
						</td>
						<td data-th="" class="col-8"><a href="/plants/{{this.id}}">{{this.plant_name}}
								{{this.personal_name}}</a></td>
						<td>
							<form class="dateForm">
								<div class="dateModal">
									<div class="form-check form-check-inline">
										<div class="form-choice">
											<input class="form-check-input {{this.plant_name}}" type="checkbox" 
											data-name="{{this.plant_name}}" id="inlineCheckbox0" 
											value=0>
											<label class="form-check-label" for="inlineCheckbox0">S</label>
										</div>

										<div class="form-choice">
											<input class="form-check-input {{this.plant_name}}" type="checkbox" 
											data-name="{{this.plant_name}}" id="inlineCheckbox1"
											value=1>
											<label class="form-check-label" for="inlineCheckbox1">M</label>
										</div>

										<div class="form-choice">
											<input class="form-check-input {{this.plant_name}}" type="checkbox" 
											data-name="{{this.plant_name}}" id="inlineCheckbox2"
											value=2>
											<label class="form-check-label" for="inlineCheckbox2">T</label>
										</div>

										<div class="form-choice">
											<input class="form-check-input {{this.plant_name}}" type="checkbox" 
											data-name="{{this.plant_name}}" id="inlineCheckbox3"
											value=3>
											<label class="form-check-label" for="inlineCheckbox4">W</label>
										</div>

										<div class="form-choice">
											<input class="form-check-input {{this.plant_name}}" type="checkbox" 
											data-name="{{this.plant_name}}" id="inlineCheckbox4"
											value=4>
											<label class="form-check-label" for="inlineCheckbox5">T</label>
										</div>

										<div class="form-choice">
											<input class="form-check-input {{this.plant_name}}" type="checkbox" 
											data-name="{{this.plant_name}}" id="inlineCheckbox5"
											value=5>
											<label class="form-check-label" for="inlineCheckbox5">F</label>
										</div>

										<div class="form-choice">
											<input class="form-check-input {{this.plant_name}}" type="checkbox" 
											data-name="{{this.plant_name}}" id="inlineCheckbox6"
											value=6>
											<label class="form-check-label" for="inlineCheckbox3">S</label>
										</div>
									</div>
									<button type="submit" class="addEvent btn" data-name="{{this.plant_name}}" data-type="Water" data-id="{{../dataUser.id}}"
									data-username="{{../dataUser.username}}">Add to
										Calendar</button>
								</div>
								<button class="resetEvents btn" data-name="{{this.plant_name}}" data-type="Water" data-id={{../dataUser.id}}
								data-username="{{../dataUser.username}}">Reset Events</button>
							</form>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>

		<div class="col-6">

			<div class="row">
				<div class="add-plant-div">
					<form class="rounded col-12 px-0 add-plant-form">
						<div class="card-header text-light text-center panel-header">
							<h2>Add a Plant</h2>
						</div>
						<div class="form-group px-4 pt-4">
							<label for="plant name">Common or Scientific Name</label>
							<input type="text" class="form-control" id="plantName" placeholder="e.g. Aloe Vera">
						</div>
						<div class="form-group px-4">
							<label for="personal name">Personal Name</label>
							<input type="text" class="form-control" id="personalName" placeholder="e.g. Planty McPlantface">
						</div>
						<button type="submit" class="btn btn-lg ml-4 mt-4" id="addAPlant">Add Plant</button>
					</form>
				</div>
			</div>

			<div class="row">
				<div id="calendar" class="text-center">
				</div>
			</div>

		</div>

	</div>

</div>

<div class="modal modal-fade add-plant-modal">
	<table class="table table-striped table-bordered table-hover pretty-table" id="plantTable">
		<caption class="panel-header text-light text-center">
			<h3>Possible Plants</h3>
			<small>Click the plant you are trying to add</small>
		</caption>
		<tbody id="possiblePlantsTable"></tbody>
	</table>
	<h2 id="searchMessage">Searching for your plant...</h2>
</div>

