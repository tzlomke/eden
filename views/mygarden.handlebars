<div class="container">
	<div class="row my-4">
		<div id="calendarDiv" class="text-center col-6">
			<h3 class="text-center">Your Gardening Schedule</h3>
			<img src="/images/calendarPlaceholder.jpg" width="100%">
		</div>
		<form class="border rounded col-6 px-0">
			<div class="card-header bg-success text-light">
				<h2>Add a Plant</h2>
			</div>
			<div class="form-group px-4 pt-4">
				<label for="plant name">Common or Scientific Name</label>
				<input type="text" class="form-control" id="plantName" placeholder="e.g. Aloe Vera">
			</div>
			<div class="form-group px-4">
				<label for="personal name">Personal Name</label>
				<input type="text" class="form-control" id="personalName" placeholder="e.g. Planty McPlantface">
			</div>
			<button type="submit" class="btn btn-lg btn-success ml-4 mt-4" id="addAPlant">Add a Plant</button>
		</form>
	</div>


	<div class="row">
		<div id="plantsDiv" class="col-12">
			<table class="table table-striped table-bordered table-hover pretty-table" id="plantTable">
				<caption class="bg-success text-light">
					<h3>Your Plants</h3>
				</caption>
				<tbody>
					{{#each myPlants}}
						<tr>
							<td data-th=""><a href="/plant/"+{{this.id}}><img
									src="'" + {{this.picture}} + "'" width="100" height="100" class="thumb"></a>
							</td>
							<td data-th="" class="col-8"><a href="/plant/"+{{this.id}} >{{this.plantName}} {{this.personal_name}}</a></td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>

<div class="modal modal-fade">
	<table class="table table-striped table-bordered table-hover pretty-table" id="plantTable">
				<caption class="bg-success text-light">
					<h3>Possible Plants</h3>
					<small>Click the plant you are trying to add</small>
				</caption>
				<tbody>
					{{#each possiblePlants}}
						<tr id="possiblePlant" data-link="https://garden.org"+{{this.link}}>
							<td data-th="">
								<img src="'" + {{this.picture}} + "'" width="100" height="100" class="thumb"></a>
							</td>
							<td data-th="" class="col-8">{{this.plantName}}</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
</div>

